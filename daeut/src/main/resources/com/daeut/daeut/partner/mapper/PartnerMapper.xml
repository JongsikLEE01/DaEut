<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daeut.daeut.partner.mapper.PartnerMapper">

  <!-- 파트너 정보 가져오기 -->
<select id="getPartners" resultType="Partner">
SELECT partner.*
        FROM users
        INNER JOIN partner ON users.user_no = partner.user_no
        WHERE users.user_no = #{userId}
</select>

  <!-- 파트너 정보 수정하기 -->
<update id="partnerUpdate">
  UPDATE partner 
    SET introduce = #{introduce}
    WHERE user_no = #{userNo}
</update>

<!-- 리뷰 정보 가져오기 -->
 <select id="getReviews" parameterType="int" resultType="com.daeut.daeut.partner.dto.Review">
SELECT r.*, u.user_name AS reviewer_name
FROM review r
JOIN users u ON r.user_no = u.user_no
WHERE r.partner_no = #{partnerNo}
    </select>

<!-- 유저 NO로 파트너 정보 가져오기-->
 <select id="findByUserNo">
        SELECT * 
        FROM partner 
        WHERE user_no = #{userNo}
    </select>

    <!--파트너 넘버로 파트너 정보 가져오기-->
    <select id="selectByPartnerNo">
        SELECT * 
        FROM partner 
        WHERE partner_no = #{partnerNo}
    </select>

    
  
</mapper>
