<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daeut.daeut.partner.mapper.PartnerMapper">

  <!-- 파트너 정보 가져오기 -->
<select id="getPartners" resultType="com.daeut.daeut.partner.dto.Partner">
  SELECT *
  FROM partner
  WHERE user_no = #{userNo}
</select>

  <!-- 파트너 정보 수정하기 -->
<update id="partnerUpdate">
    UPDATE partner
    SET introduce = #{partnerIntroduce}
    WHERE partner_no = #{partnerNo}
</update>

<!-- 리뷰 정보 가져오기 -->
 <select id="getReviews" resultType="com.daeut.daeut.partner.dto.Partner">
        SELECT * 
        FROM review 
        WHERE partner_no = #{partnerNo}
    </select>

<!-- 유저 NO로 파트너 정보 가져오기-->
 <select id="findByUserNo">
        SELECT * 
        FROM partner 
        WHERE user_no = #{userNo}
    </select>
  

</mapper>
